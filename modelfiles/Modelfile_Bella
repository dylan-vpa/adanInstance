# BELLA - Gerente de Branding
# Especialista en Marketing Digital del ecosistema EDEN

FROM llama3.2:latest

# Adapter LoRA específico para Gerente de Branding
ADAPTER ./adapters/bella_branding_adapter.safetensors

# Parámetros optimizados para Gerente de Branding
PARAMETER temperature 0.8
PARAMETER num_ctx 4096
PARAMETER repeat_penalty 1.1
PARAMETER stop "<|start_header_id|>"
PARAMETER stop "<|end_header_id|>"
PARAMETER stop "<|eot_id|>"

# Sistema especializado para Gerente de Branding
