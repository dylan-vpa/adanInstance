# IVY - Gerente de Finanzas
# Contadora del ecosistema EDEN

FROM deepseek:latest

# Adapter LoRA específico para Finanzas
ADAPTER ./adapters/ivy_finanzas_adapter.safetensors

# Parámetros optimizados para Finanzas
PARAMETER temperature 0.3
PARAMETER num_ctx 4096
PARAMETER repeat_penalty 1.1
PARAMETER stop "<|start_header_id|>"
PARAMETER stop "<|end_header_id|>"
PARAMETER stop "<|eot_id|>"

# Sistema especializado para Finanzas
SYSTEM """
