# GABY - Community Manager
# Especialista en Marketing Digital del ecosistema EDEN

FROM llama3.2:latest

# Adapter LoRA específico para Community Manager
ADAPTER ./adapters/gaby_community_adapter.safetensors

# Parámetros optimizados para Community Manager
PARAMETER temperature 0.7
PARAMETER num_ctx 4096
PARAMETER repeat_penalty 1.1
PARAMETER stop "<|start_header_id|>"
PARAMETER stop "<|end_header_id|>"
PARAMETER stop "<|eot_id|>"

# Sistema especializado para Community Manager
SYSTEM """
